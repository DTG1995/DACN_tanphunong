@model IEnumerable<DACN_TanPhuNong.Models.tb_BaiVietTrans>

@{
    ViewBag.Title = GlobalRes.Conferences;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <h1>
        @GlobalRes.Conferences
        <small>@GlobalRes.List</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","UngDung")"><i class="fa fa-dashboard"></i> Quản trị</a></li>
        <li><a class="active">@GlobalRes.Conferences</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@GlobalRes.List</h3>
                    <a href="@Url.Action("Create")" class="btn btn-primary" style="float: right">@GlobalRes.Add_new</a>
                </div>
                <div class="box-body">
                    <table id="datatable" class="table">
                        <thead>
                            <tr>
                                <th>
                                    @GlobalRes.Title
                                </th>
                                <th>
                                    @GlobalRes.summary
                                </th>
                                <th>
                                    @GlobalRes.Created
                                </th>
                                <th>
                                    @GlobalRes.Images
                                </th>
                                <th>
                                    @GlobalRes.Author
                                </th>
                                <th class="no-sort"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TieuDeTrans)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TomTatTrans)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NoiDungTrans)
                                    </td>
                                    <td>
                                        <img height="100px" src="@item.tb_BaiViet.HinhAnh" />
                                    </td>
                                    <td>
                                        @item.tb_BaiViet.tb_NguoiDung.TenDangNhap
                                    </td>
                                    <td>
                                        @Html.ActionLink(@GlobalRes.Edit, "Edit", new { id = item.MaBV }) |
                                        @Html.ActionLink(@GlobalRes.Detail, "Details", new { id = item.MaBV }) |
                                        @Html.ActionLink(@GlobalRes.Delete, "Delete", new { id = item.MaBV })
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>

                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
@Styles.Render("~/Content/admin/dataTables.bootstrap.min.css")
@Scripts.Render("~/Scripts/admin/jquery.dataTables.min.js")
@Scripts.Render("~/Scripts/admin/dataTables.bootstrap.min.js")
<script>
    $("#datatable").DataTable({
        columnDefs: [
        { targets: 'no-sort', orderable: false }
        ]
    });
</script>