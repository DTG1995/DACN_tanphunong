@model DACN_TanPhuNong.Models.tb_Videos

@{
    ViewBag.Title = GlobalRes.Edit;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Video
        <small>@GlobalRes.List</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","UngDung")"><i class="fa fa-dashboard"></i>@GlobalRes.Admin</a></li>
        <li><a class="active">Videos</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@GlobalRes.Edit</h3>
                </div>
                <div class="box-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(mode=>mode.MaVideo)
                            <div class="form-group">
                                <label class="control-label col-md-2">Tên video</label>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.TenVideo, new {@class="form-control" })
                                    @Html.ValidationMessageFor(model => model.TenVideo)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Link, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.Link, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Link)
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="@GlobalRes.Save_Change" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }

                    <div>
                        @Html.ActionLink(@GlobalRes.back_to_list, "Index")
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
