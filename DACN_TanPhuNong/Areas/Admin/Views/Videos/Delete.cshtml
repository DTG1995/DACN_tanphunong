@model DACN_TanPhuNong.Models.tb_Videos

@{
    ViewBag.Title = GlobalRes.Delete;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@GlobalRes.Delete</h3>
                </div>
                <div class="box-body">

                    <h3>Are you sure you want to delete this?</h3>
                    <div>
                        <dl class="dl-horizontal">
                            <dt>
                                Tên video
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.TenVideo)
                            </dd>

                            <dt>
                               Link
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Link)
                            </dd>

                            <dt>
                               Ngày tạo
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.NgayTao)
                            </dd>

                            <dt>
                                Người đăng
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.NguoiDang)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-default" /> |
                                @Html.ActionLink("Back to List", "Index")
                            </div>
                        }
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>