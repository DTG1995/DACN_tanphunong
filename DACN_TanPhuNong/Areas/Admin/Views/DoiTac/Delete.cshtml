@model DACN_TanPhuNong.Models.tb_DoiTac

@{
    ViewBag.Title = @GlobalRes.Delete;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        @GlobalRes.Partners
        <small>@GlobalRes.List</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","UngDung")"><i class="fa fa-dashboard"></i>@GlobalRes.Admin</a></li>
        <li><a class="active">@GlobalRes.Partners</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@GlobalRes.Delete</h3>
                </div>
                <div class="box-body">
                    <h3>Are you sure you want to delete this?</h3>
                    <div>

                        <dl class="dl-horizontal">
                            <dt>
                                Tên đối tác
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.TenDT)
                            </dd>

                            <dt>
                               Hình ảnh
                            </dt>

                            <dd>
                                <img src="@Model.HinhAnh" />
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                             <div class="form-actions no-color">
                            <input type="submit" value="@GlobalRes.Delete" class="btn btn-default" /> |
                            @Html.ActionLink(GlobalRes.back_to_list, "Index")
                        </div>
                        }
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
