@model DACN_TanPhuNong.Models.tb_NguoiDung

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Người dùng
        <small>thêm người dùng</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "UngDung")"><i class="fa fa-dashboard"></i> Quản trị</a></li>
        <li><a href="@Url.Action("Index")"> Người dùng</a></li>
        <li><a class="active">Thêm mới</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Sửa người dùng</h3>
                </div>
                <div class="box-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.TenDangNhap)

                            <div class="form-group">
                                <label class="control-label col-md-2">Tên đăng nhập</label>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.TenDangNhap, new { @class = "form-control", @readonly = true, style = "font-weight: bold;" })
                                    @Html.ValidationMessageFor(model => model.TenDangNhap)
                                </div>
                            </div>

                            

                            <div class="form-group">
                                <label class="control-label col-md-2">Trạng thái</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.TrangThai)
                                    @Html.ValidationMessageFor(model => model.TrangThai)
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Loại người dùng</label>
                                <div class="col-md-10">
                                    <div class="checkbox">
                                        <label><input type="checkbox" name="LoaiND" value="0" />Quản trị viên</label>
                                    </div>
                                    <div class="checkbox">
                                        <label><input type="checkbox" name="LoaiND" value="1" />Quản lý sản phẩm</label>
                                    </div>
                                    <div class="checkbox">
                                        <label><input type="checkbox" name="LoaiND" value="2" />Viết bài tin tức, sự kiện, thông báo</label>
                                    </div>
                                </div>
                            </div>
                            <script>
                                var check = [@Model.LoaiND];
                                for (var i = 0; i < check.length; i++) {
                                    $("input[value='" + check[i] + "'][type='checkbox'").prop('checked', 'true')
                                }
                            </script>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="@GlobalRes.Save_Change" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }

                    <div>
                        @Html.ActionLink("Quay lại danh sách", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
