@model DACN_TanPhuNong.Models.tb_BaiViet

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Tin tức
        <small>thêm tin tức</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "UngDung")"><i class="fa fa-dashboard"></i> Quản trị</a></li>
        <li><a href="@Url.Action("Index")"> Tin tức</a></li>
        <li><a class="active">Thêm mới</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Thêm mới</h3>
                </div>
                <div class="box-body">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                @Html.LabelFor(model => model.TieuDe, new {@class = "control-label col-md-2"})
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.TieuDe)
                                    @Html.ValidationMessageFor(model => model.TieuDe)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.HinhAnh, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.HinhAnh)
                                    @Html.ValidationMessageFor(model => model.HinhAnh)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.TomTat, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.TomTat)
                                    @Html.ValidationMessageFor(model => model.TomTat)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.NoiDung, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.NoiDung)
                                    @Html.ValidationMessageFor(model => model.NoiDung)
                                </div>
                            </div>

                            

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Thêm" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }

                    <div>
                        @Html.ActionLink("Quay lại danh sách", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}