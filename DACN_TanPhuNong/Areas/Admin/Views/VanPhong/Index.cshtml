@model IEnumerable<DACN_TanPhuNong.Models.tb_VanPhong>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Văn phòng
        <small>danh sách văn phòng</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","UngDung")"><i class="fa fa-dashboard"></i> Quản trị</a></li>
        <li><a class="active">Văn phòng</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Danh sách văn phòng</h3>
                    <a href="@Url.Action("Create")" class="btn btn-primary" style="float: right">Thêm mới</a>
                </div>
                <div class="box-body">
                    <table id="datatable" class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.TenVP)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DiaChi)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SDT)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ChiTiet)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenVP)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DiaChi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SDT)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ChiTiet)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaVP }) |
                                        @Html.ActionLink("Chi tiết", "Details", new { id = item.MaVP }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaVP })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
@Styles.Render("~/Content/admin/dataTables.bootstrap.min.css")
@Scripts.Render("~/Scripts/admin/jquery.dataTables.min.js")
@Scripts.Render("~/Scripts/admin/dataTables.bootstrap.min.js")
<script>
    $("#datatable").DataTable();
</script>