@using DACN_TanPhuNong.Models
@model DACN_TanPhuNong.Models.tb_SanPham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Sản phẩm
        <small>Sửa sản phẩm</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "UngDung")"><i class="fa fa-dashboard"></i> Quản trị</a></li>
        <li><a href="@Url.Action("Index")"> Sản phẩm</a></li>
        <li><a class="active">Sửa sản phẩm</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Sửa sản phẩm</h3>
                </div>
                <div class="box-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.MaSP)
                            <div class="form-group">
                                <label class="control-label col-md-2">@GlobalRes.Images</label>
                                <div class="col-md-7">
                                    @Html.TextBoxFor(model => model.HinhAnh, new { @class = "form-control", style = "font-weight: bold", id = "HinhAnh" })
                                    @Html.ValidationMessageFor(model => model.HinhAnh)
                                </div>
                                <div class="col-md-3">
                                    <button type="button" onclick="chosseImage('HinhAnh')" class="btn btn-primary">Chọn hình</button>
                                </div>
                            </div>

                            <div class="row">
                                <ul class="tabs">
                                    <li class="tab-link current" data-tab="tab-1"><img width="40" height="30" src="/images/vi_vuong.png" />@GlobalRes.VietNam </li>
                                    <li class="tab-link" data-tab="tab-2"><img width="40" height="30" src="/images/en_vuong.png" />@GlobalRes.English </li>
                                </ul>

                                <div id="tab-1" class="tab-content current">
                                    @{
                                        tb_SanPhamTrans spVi = ViewBag.SpVi;
                                    }
                                    <div class="row">
                                        <div class="form-group">
                                            <label class="control-label col-md-2">Tên sản phẩm</label>
                                            <div class="col-md-10">
                                                <input class="form-control" value="@spVi.TenSanPhamTrans" style="font-weight: bold" name="tenSPVn" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-2">Ưu điểm</label>
                                            <div class="col-md-10">
                                                <textarea class="form-control" name="uuDiemVn" id="uuDiemVn" style="font-weight: bold; word-wrap: break-word; resize: none;">@spVi.UuDienTrans</textarea>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-2">Đặc điểm</label>
                                            <div class="col-md-10">
                                                <textarea class="form-control" name="dacDiemVn" id="dacDiemVn">@spVi.DacDiemTrans</textarea>

                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-2">Thành Phần chính</label>
                                            <div class="col-md-10">
                                                <textarea class="form-control" name="tpChinhVn" id="tpChinhVn">@spVi.ThanhPhanChinhTrans</textarea>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-2">Lưu ý</label>
                                            <div class="col-md-10">
                                                <textarea class="form-control" name="luuYVn" id="luuYVn">@spVi.LuuYTrans</textarea>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-2">Cách dùng</label>
                                            <div class="col-md-10">
                                                <textarea class="form-control" name="cachDungVn" id="cachDungVn">@spVi.CachDungTrans</textarea>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div id="tab-2" class="tab-content">
                                    @{ tb_SanPhamTrans spEn = ViewBag.SpEn; }
                                    <div class="row">
                                        <div class="form-group">
                                            <label class="control-label col-md-2">Product Name</label>
                                            <div class="col-md-10">
                                                <input class="form-control" value="@spEn.TenSanPhamTrans" style="font-weight: bold" name="tenSPEn" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-2"> advantage</label>
                                            <div class="col-md-10">
                                                <textarea class="form-control" name="uuDiemEn" id="uuDiemEn" style="font-weight: bold; word-wrap: break-word; resize: none;">@spEn.UuDienTrans</textarea>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-2">Characteristics</label>
                                            <div class="col-md-10">
                                                <textarea class="form-control" name="dacDiemEn" id="dacDiemEn">@spEn.DacDiemTrans</textarea>

                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-2">Main ingredient</label>
                                            <div class="col-md-10">
                                                <textarea class="form-control" name="tpChinhEn" id="tpChinhEn">@spEn.ThanhPhanChinhTrans</textarea>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-2"> Note</label>
                                            <div class="col-md-10">
                                                <textarea class="form-control" name="luuYEn" id="luuYEn">@spEn.LuuYTrans</textarea>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-2">Use</label>
                                            <div class="col-md-10">
                                                <textarea class="form-control" name="cachDungEn" id="cachDungEn">@spEn.CachDungTrans</textarea>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                            </div>


                            <div class="form-horizontal">
                                @Html.ValidationSummary(true)



                                <div class="form-group">
                                    <label class="control-label col-md-2">@GlobalRes.Packing</label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.QuyCachDongGoi, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.QuyCachDongGoi)
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">@GlobalRes.Made_in</label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.XuatXu, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.XuatXu)
                                    </div>
                                </div>





                                <div class="form-group">
                                    @Html.LabelFor(model => model.TrangThai, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.TrangThai)
                                        @Html.ValidationMessageFor(model => model.TrangThai)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.MaLoai, GlobalRes.Category, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.DropDownList("MaLoai", String.Empty)
                                        @Html.ValidationMessageFor(model => model.MaLoai)
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="@GlobalRes.Save_Change" class="btn btn-default" />
                                    </div>
                                </div>



                            </div>


                            <div>
                                @Html.ActionLink("Quay lại danh sách", "Index")
                            </div>
                        </div>
                  
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CK Editor -->
@Scripts.Render("~/Scripts/admin/ckeditor/ckeditor.js")
<script>
    var config = {};
    config.toolbarGroups = [
            { name: 'editing', groups: ['find', 'selection', 'spellchecker', 'editing'] },
            { name: 'forms', groups: ['forms'] },
            { name: 'basicstyles', groups: ['basicstyles', 'cleanup'] },
            { name: 'paragraph', groups: ['list', 'indent', 'blocks', 'align', 'bidi', 'paragraph'] },
            { name: 'insert', groups: ['insert'] },
            { name: 'links', groups: ['links'] },
            { name: 'styles', groups: ['styles'] },
            { name: 'colors', groups: ['colors'] },
            { name: 'tools', groups: ['tools'] },
            { name: 'others', groups: ['others'] },
            { name: 'document', groups: ['document', 'mode', 'doctools'] }
    ];

    config.removeButtons = 'Templates,Save,NewPage,Preview,Print,SelectAll,Redo,Undo,PasteText,PasteFromWord,Find,Scayt,Replace,Form,Checkbox,Radio,TextField,Textarea,Select,ImageButton,HiddenField,Button,BidiRtl,BidiLtr,Language,Smiley,PageBreak,Anchor,ShowBlocks';
    config.resize_enabled = false
    CKEDITOR.replace("dacDiemVn", config);
    CKEDITOR.replace("tpChinhVn", config);
    CKEDITOR.replace("luuYVn", config);
    CKEDITOR.replace("cachDungVn", config);
    CKEDITOR.replace("dacDiemEn", config);
    CKEDITOR.replace("tpChinhEn", config);
    CKEDITOR.replace("luuYEn", config);
    CKEDITOR.replace("cachDungEn", config);

</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
