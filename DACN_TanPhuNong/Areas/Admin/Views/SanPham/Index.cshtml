@model IEnumerable<DACN_TanPhuNong.Models.tb_SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Sản phẩm
        <small>danh sách sản phẩm</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","UngDung")"><i class="fa fa-dashboard"></i> Quản trị</a></li>
        <li><a class="active">Sản phẩm</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Danh sách sản phẩm</h3>
                    <a href="@Url.Action("Create")" class="btn btn-primary" style="float: right">Thêm mới</a>
                </div>
                <div class="box-body">
                    <table id="datatable" class="table">
                        <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.TenSanPham)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UuDiem)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DacDiem)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ThanhPhanChinh)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LuuY)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.QuyCachDongGoi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.XuatXu)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CachDung)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.GiaThanh)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TrangThai)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.tb_LoaiSP.TenLoaiSP)
                            </th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenSanPham)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UuDiem)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DacDiem)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ThanhPhanChinh)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LuuY)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.QuyCachDongGoi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.XuatXu)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CachDung)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GiaThanh)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TrangThai)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tb_LoaiSP.TenLoaiSP)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaSP }) |
                                        @Html.ActionLink("Chi tiết", "Details", new { id = item.MaSP }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaSP })
                                    </td>
                                </tr>
                            }

                            </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
@Styles.Render("~/Content/admin/dataTables.bootstrap.min.css")
@Scripts.Render("~/Scripts/admin/jquery.dataTables.min.js")
@Scripts.Render("~/Scripts/admin/dataTables.bootstrap.min.js")
<script>
    $("#datatable").DataTable();
</script>