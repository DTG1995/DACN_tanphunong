@using DACN_TanPhuNong.Models
@model DACN_TanPhuNong.Models.tb_LoaiSP

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Loại sản phẩm
        <small>Sửa loại sản phẩm</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "UngDung")"><i class="fa fa-dashboard"></i> Quản trị</a></li>
        <li><a href="@Url.Action("Index")"> Loại sản phẩm</a></li>
        <li><a class="active">Sửa loại sản phẩm</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Sửa loại sản phẩm</h3>
                </div>
                <div class="box-body">

                    @using (Html.BeginForm())
                    {
                        tb_LoaiSPTrans transVi = Model.tb_LoaiSPTrans.Where(x=>x.NgonNgu == "vi").FirstOrDefault();
                        tb_LoaiSPTrans transEn = Model.tb_LoaiSPTrans.Where(x => x.NgonNgu == "en").FirstOrDefault();
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.MaLoaiSP)
                            <div class="content">
                                <ul class="tabs">
                                    <li class="tab-link current" data-tab="tab-1"><img width="40" height="30" src="/images/vi_vuong.png" />@GlobalRes.VietNam </li>
                                    <li class="tab-link" data-tab="tab-2"><img width="40" height="30" src="/images/en_vuong.png" />@GlobalRes.English </li>
                                </ul>

                                <div id="tab-1" class="tab-content current">
                                    <div class="form-group">
                                        <label class="control-label col-md-2">Tên loại</label>
                                        <div class="col-md-10">
                                            <input name="tenVn" value="@transVi.TenLoaiSPTrans" type="text" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-2">Mô tả</label>
                                        <div class="col-md-10">
                                            <input name="moTaVn" value="@transVi.MoTaTrans" type="text" class="form-control" />
                                        </div>
                                    </div>



                                </div>
                                <div id="tab-2" class="tab-content">
                                    <div class="form-group">
                                        <label class="control-label col-md-2">Category name</label>
                                        <div class="col-md-10">
                                            <input name="tenEn" value="@transEn.TenLoaiSPTrans" type="text" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-2">Description</label>
                                        <div class="col-md-10">
                                            <input name="moTaEn" value="@transEn.MoTaTrans" type="text" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                           
                            <div class="form-group">
                                <label class="control-label col-md-2">Loại cha (parent)</label>
                                <div class="col-md-10">
                                    @Html.DropDownList("LoaiCha", String.Empty)
                                    @Html.ValidationMessageFor(model => model.LoaiCha)
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Trạng thái (status)</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.TrangThai)
                                    @Html.ValidationMessageFor(model => model.TrangThai)
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="@GlobalRes.Save_Change" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }

                    <div>
                        @Html.ActionLink("Quay lại danh sách", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
