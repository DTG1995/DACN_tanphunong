@model DACN_TanPhuNong.Models.tb_LoaiSP

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Loại sản phẩm
        <small>thêm loại sản phẩm</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "UngDung")"><i class="fa fa-dashboard"></i> Quản trị</a></li>
        <li><a href="@Url.Action("Index")"> Loại sản phẩm</a></li>
        <li><a class="active">Thêm mới</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Thêm mới</h3>
                </div>
                <div class="box-body">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)

                            <div class="form-group">
                                @Html.LabelFor(model => model.TenLoaiSP, new {@class = "control-label col-md-2"})
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.TenLoaiSP)
                                    @Html.ValidationMessageFor(model => model.TenLoaiSP)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.MoTa, new {@class = "control-label col-md-2"})
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.MoTa)
                                    @Html.ValidationMessageFor(model => model.MoTa)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.LoaiCha, new {@class = "control-label col-md-2"})
                                <div class="col-md-10">
                                    @Html.DropDownList("LoaiCha", String.Empty)
                                    @Html.ValidationMessageFor(model => model.LoaiCha)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.TrangThai, new {@class = "control-label col-md-2"})
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.TrangThai)
                                    @Html.ValidationMessageFor(model => model.TrangThai)
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-default"/>
                                </div>
                            </div>
                        </div>
                    }

                    <div>
                        @Html.ActionLink("Quay lại danh sách", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

                    @section Scripts {
                        @Scripts.Render("~/bundles/jqueryval")
                    }
