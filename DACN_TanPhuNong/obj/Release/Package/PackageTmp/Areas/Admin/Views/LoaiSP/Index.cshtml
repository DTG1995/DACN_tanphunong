@model IEnumerable<DACN_TanPhuNong.Models.tb_LoaiSP>

@{
    ViewBag.Title = "Danh sách loại sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Loại sản phẩm
        <small>danh sách loại sản phẩm</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","UngDung")"><i class="fa fa-dashboard"></i> Quản trị</a></li>
        <li><a class="active">Tables</a></li>
    </ol>
</section>
<section class="content">
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Danh sách loại sản phẩm</h3>
                <a href="@Url.Action("Create")" class="btn btn-primary" style="float: right">Thêm mới</a>
            </div>
            <div class="box-body">
                <table id="datatable" class="table">
                    <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TenLoaiSP)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MoTa)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TrangThai)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LoaiCha)
                        </th>
                        <th class="no-sort"></th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenLoaiSP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MoTa)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TrangThai)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tb_LoaiSP2.TenLoaiSP)
                            </td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new {id = item.MaLoaiSP}) |
                                @Html.ActionLink("Chi tiết", "Details", new {id = item.MaLoaiSP}) |
                                @Html.ActionLink("Xóa", "Delete", new {id = item.MaLoaiSP})
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</section>
@Styles.Render("~/Content/admin/dataTables.bootstrap.min.css")
@Scripts.Render("~/Scripts/admin/jquery.dataTables.min.js")
@Scripts.Render("~/Scripts/admin/dataTables.bootstrap.min.js")
<script>
    $("#datatable").DataTable({
        columnDefs: [
        { targets: 'no-sort', orderable: false }
        ]
    });
</script>