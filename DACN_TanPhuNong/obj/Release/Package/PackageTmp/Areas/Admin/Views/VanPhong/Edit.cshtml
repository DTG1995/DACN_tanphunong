@model DACN_TanPhuNong.Models.tb_VanPhong

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Văn phòng
        <small>Sửa văn phòng</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "UngDung")"><i class="fa fa-dashboard"></i> Quản trị</a></li>
        <li><a href="@Url.Action("Index")"> Văn phòng</a></li>
        <li><a class="active">Sửa văn phòng</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Sửa văn phòng</h3>
                </div>
                <div class="box-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.MaVP)

                            <div class="form-group">
                                @Html.LabelFor(model => model.TenVP, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.TenVP, new { @class = "form-control", style = "font-weight: bold" })
                                    @Html.ValidationMessageFor(model => model.TenVP)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.DiaChi, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.DiaChi)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.SDT, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.SDT, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.SDT)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email" })
                                    @Html.ValidationMessageFor(model => model.Email)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ChiTiet, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.ChiTiet)
                                    @Html.ValidationMessageFor(model => model.ChiTiet)
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Lưu" class="btn btn-default"/>
                                </div>
                            </div>
                        </div>
                    }


                    <div>
                        @Html.ActionLink("Quay lại danh sách", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@Scripts.Render("~/Scripts/admin/ckeditor/ckeditor.js")
<script>
    CKEDITOR.replace("ChiTiet", {
        filebrowserBrowseUrl: '@Url.Content("~/Areas/Admin/browser/ImageBrowserCkeditor.aspx")',
        filebrowserWindowWidth: '750',
        filebrowserWindowHeight: '600'
    });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}