@model IEnumerable<DACN_TanPhuNong.Models.tb_BaiViet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Tuyển dụng
        <small>danh sách tuyển dụng</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","UngDung")"><i class="fa fa-dashboard"></i> Quản trị</a></li>
        <li><a class="active">Tuyển dụng</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Danh sách tuyển dụng</h3>
                    <a href="@Url.Action("Create")" class="btn btn-primary" style="float: right">Thêm mới</a>
                </div>
                <div class="box-body">
                    <table id="datatable" class="table">
                        <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.TieuDe)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TomTat)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NgayViet)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HinhAnh)
                            </th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TieuDe)
                                    </td>
                                    <td>
                                        @(item.TomTat.Length > 200 ? item.TomTat.Substring(0, 200) + "..." : item.TomTat)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NgayViet)
                                    </td>
                                    <td>
                                        <img src="@item.HinhAnh" width="100" height="100" />
                                    </td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaBV }) |
                                        @Html.ActionLink("Chi tiết", "Details", new { id = item.MaBV }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaBV })
                                    </td>
                                </tr>
                            }
                            </tbody>
                    </table>

                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
@Styles.Render("~/Content/admin/dataTables.bootstrap.min.css")
@Scripts.Render("~/Scripts/admin/jquery.dataTables.min.js")
@Scripts.Render("~/Scripts/admin/dataTables.bootstrap.min.js")
<script>
    $("#datatable").DataTable();
</script>