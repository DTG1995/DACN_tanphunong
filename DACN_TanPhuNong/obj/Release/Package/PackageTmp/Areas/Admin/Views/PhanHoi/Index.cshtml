@model IEnumerable<DACN_TanPhuNong.Models.tb_PhanHoi>

@{
    ViewBag.Title = @GlobalRes.Feedback;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        @GlobalRes.Feedback
        <small>@GlobalRes.List</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","UngDung")"><i class="fa fa-dashboard"></i> Quản trị</a></li>
        <li><a class="active">@GlobalRes.Feedback</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@GlobalRes.List</h3>

                </div>
                <div class="box-body">
                    <table id="datatable" class="table">
                        <thead>
                            <tr>
                                <th>
                                    @GlobalRes.FullName
                                </th>
                                <th>
                                    @GlobalRes.PhoneNumber
                                </th>
                                <th>
                                    @GlobalRes.Content
                                </th>

                                <th>
                                    @GlobalRes.Email
                                </th>
                                <th>
                                    @GlobalRes.Statuts
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                       @Html.DisplayFor(modelItem => item.HoTen)
                                   </td>
                                    <td>
                                        
                                        @Html.DisplayFor(modelItem => item.SDT)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NoiDung)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>

                                    @{
                                        if (item.TrangThai == 0)
                                        {
                                            <td><a href="@Url.Action("XuLyPhanHoi","PhanHoi",new { @id=item.MaPH})">Chưa xử lý</a></td>
                                        }
                                        else
                                        {
                                            <td>Đã xem</td>
                                        }
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
@Styles.Render("~/Content/admin/dataTables.bootstrap.min.css")
@Scripts.Render("~/Scripts/admin/jquery.dataTables.min.js")
@Scripts.Render("~/Scripts/admin/dataTables.bootstrap.min.js")
<script>
    $("#datatable").DataTable({
        columnDefs: [
        { targets: 'no-sort', orderable: false }
        ]
    });
</script>