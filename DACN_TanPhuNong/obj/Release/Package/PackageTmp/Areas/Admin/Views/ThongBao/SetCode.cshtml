
@{
    ViewBag.Title = "SetCode";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        @GlobalRes.thong_bao
        <small>@GlobalRes.List</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","UngDung")"><i class="fa fa-dashboard"></i>@GlobalRes.Admin</a></li>
        <li><a class="active">@GlobalRes.thong_bao</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Set Code</h3>
                </div>
                <div class="box-body">
                    @using (Html.BeginForm("SetCode", "ThongBao", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            
        
    <div class="form-group">
        <label class="control-label col-md-4">Set Code @GlobalRes.Internal</label>  
        <div class="col-md-6">
            <input type="text" class="form-control" value="@ViewBag.Code" name="codeInternal" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Set Code</button>
        </div>
    </div>

</div>
                    }          

                </div>
            </div>
        </div>
    </div>
</section>
