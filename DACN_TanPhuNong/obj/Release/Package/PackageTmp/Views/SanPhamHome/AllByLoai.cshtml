@using DACN_TanPhuNong.Controllers
@model IEnumerable<DACN_TanPhuNong.Models.tb_SanPham>

@{
    ViewBag.Title = "AllByLoai";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@foreach (var item in Model) {
    <section  class="post">
    <article>
        <figure class="post-featured-image">
            <a href="@Url.RouteUrl("SanPhamDetails", new { id = item.MaSP,title=UrlEncode.ToFriendlyUrl(item.TenSanPham) })" title="@item.TenSanPham">
                <img  src="@item.HinhAnh" class="attachment-featured wp-post-image" alt="@item.TenSanPham" title="@item.TenSanPham" style="height: 300px;">
            </a>
        </figure>
        <header class="entry-header">
            <h2 class="entry-title">
                <a href="@Url.RouteUrl("SanPhamDetails", new { id = item.MaSP, title = UrlEncode.ToFriendlyUrl(item.TenSanPham) })" title="@item.TenSanPham">@item.TenSanPham</a>
            </h2><!-- .entry-title -->
        </header>

        <div class="entry-content clearfix">
            <p>&nbsp; Ưu điểm: @item.UuDiem.Substring(0,180)...</p>
        </div>
        <div class="entry-meta-bar clearfix">
            <div class="entry-meta">
                <span class="author vcard"><a class="url fn n" href="#">@(item.NguoiThem??"Người ẩn danh")</a></span>
                <span class="category"><a href="@Url.RouteUrl("LoaiSanPham", new { id = item.tb_LoaiSP.MaLoaiSP, title = UrlEncode.ToFriendlyUrl(item.tb_LoaiSP.TenLoaiSP) })" rel="category tag">@item.tb_LoaiSP.TenLoaiSP</a></span>
            </div><!-- .entry-meta -->
            <a class="readmore" href="@Url.RouteUrl("SanPhamDetails", new { id = item.MaSP, title = UrlEncode.ToFriendlyUrl(item.TenSanPham) })" title="@item.TenSanPham">Chi tiết sản phẩm</a>
        </div>
    </article>
</section>
}
