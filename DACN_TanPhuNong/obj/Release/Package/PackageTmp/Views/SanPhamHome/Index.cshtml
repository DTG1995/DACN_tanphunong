@using DACN_TanPhuNong.Models
@model List<DACN_TanPhuNong.Models.tb_LoaiSP>
@{
    ViewBag.Title = "Danh sách các loại sản phẩm của công ty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@helper renderLoaiSP(tb_LoaiSP lsp)
{
    <li>
        @lsp.TenLoaiSP
        <ul>
            @{
                var listLoaiCha = lsp.tb_LoaiSP1.ToList();
                foreach (var t in listLoaiCha)
                {
                    @renderLoaiSP(t)
                }
            }
        </ul>
    </li>
}
<h1><b><center>Sản phẩm của công ty</center></b></h1>
<ul>
    @for (int i = 0; i < Model.Count; i++)
    {
        @renderLoaiSP(Model[i])
    }
</ul>