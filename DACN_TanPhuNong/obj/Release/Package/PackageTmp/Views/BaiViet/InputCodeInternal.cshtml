@{
    ViewBag.Title = "InputCodeInternal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    @Html.AntiForgeryToken()
    @if (!string.IsNullOrEmpty(ViewBag.ErrorCode))
    {
        <div class="alert alert-danger alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Error!</strong> @ViewBag.ErrorCode
        </div>
    }
    <h3>Nội dung bạn truy cập chỉ dành cho nội bộ công ty!</h3>

    @using (Html.BeginForm("InputCodeInternal", "BaiViet", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="form-group">
                <label class="control-label col-md-4">Nhập code để kiểm tra: </label>
                <div class="col-md-6">
                    <input type="text" class="form-control" name="codeInternal" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary">OK</button>
                </div>
            </div>

        </div>
    }

</div>