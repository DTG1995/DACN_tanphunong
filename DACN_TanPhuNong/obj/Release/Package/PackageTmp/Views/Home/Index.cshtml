@using WebGrease
@model IEnumerable<DACN_TanPhuNong.Models.tb_SanPham>

@if (Model == null)
{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";   
    HtmlString str = new HtmlString(ViewBag.ContentHome);
    <section class="page ">
        <article style="padding: 15px;">
            @Html.Raw(str);
        </article>
    </section>
}
else
{
    ViewBag.Title = "Kết quả tìm kiếm";
    Layout = "~/Views/Shared/_Layout.cshtml";   
    foreach (var item in Model)
    {
        <section class=" post">
		<article>
			<header class="entry-header">
    			<h2 class="entry-title">
    				<a href="@Url.Action("Details","SanPhamHome",new{id = item.MaSP})" title="@item.TenSanPham">@item.TenSanPham</a>
    			</h2><!-- .entry-title -->
  		</header>

  		
  			
  			<div class="entry-content clearfix">
    			<p>Ưu điểm: @(item.UuDiem.Length>180?item.UuDiem.Substring(0,173)+"...":item.UuDiem)</p>
  			</div>

  			
		</article>
	</section>
    }
    <section class=" post">
		<article>
			<header class="entry-header">
    			<h2 class="entry-title">
    				<a href="@Url.Action("Details","SanPhamHome",new{id = 1})" title="asdasds">asdasdsa</a>
    			</h2><!-- .entry-title -->
  		</header>

  		
  			
  			<div class="entry-content clearfix">
    			<p>Ưu điểm: sadasdasdsad</p>
  			</div>

  			
		</article>
	</section>
}


