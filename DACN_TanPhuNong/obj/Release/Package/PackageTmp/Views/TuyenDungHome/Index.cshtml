@using DACN_TanPhuNong.Controllers
@model IEnumerable<DACN_TanPhuNong.Models.tb_BaiViet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tuyển dụng</h2>
@if (Model.Count() == 0)
{
    <p>Chưa có dữ liệu</p>
}
else
{
    foreach (var item in Model)
    {
        <section class="post">
            <article>
                <figure class="post-featured-image">
                    <a href="@Url.RouteUrl("TuyenDungDetails", new {id = item.MaBV, title=UrlEncode.ToFriendlyUrl(item.TieuDe)})" title="@item.TieuDe">
                        <img width="500" height="300" src="@item.HinhAnh" class="attachment-featured wp-post-image" alt="@item.TieuDe" title="@item.TieuDe">
                    </a>
                </figure>
                <header class="entry-header">
                    <h2 class="entry-title">
                        <a href="@Url.RouteUrl("TuyenDungDetails", new {id = item.MaBV, title=UrlEncode.ToFriendlyUrl(item.TieuDe)})" title="@item.TieuDe">@item.TieuDe</a>
                    </h2><!-- .entry-title -->
                </header>

                <div class="entry-content clearfix">
                    <p>&nbsp;@(item.TomTat.Length > 185 ? item.TomTat.Substring(0, 180) + "..." : item.TomTat)</p>
                </div>
                <div class="entry-meta-bar clearfix">
                    <div class="entry-meta">
                        <span class="byline"> <span class="author vcard"><a class="url fn n" href="#">@item.NguoiViet</a></span></span><span class="posted-on"><a href="http://tanphunong.vn/phan-huu-co-khoang-realstrong-25-5-5/" rel="bookmark">@((item.NgayViet ?? DateTime.Now).ToString("dd-MM-yyy hh:mm:ss"))</a></span>
                    </div><!-- .entry-meta -->
                    <a class="readmore" href="@Url.RouteUrl("TuyenDungDetails", new {id = item.MaBV, title=UrlEncode.ToFriendlyUrl(item.TieuDe)})" title="@item.TieuDe">Chi tiết tuyển dụng</a>
                </div>
            </article>
        </section>
    }
}