@using DACN_TanPhuNong.Models
@{
    db_tanphunongEntities db = new db_tanphunongEntities();
    var listLSP = db.tb_LoaiSP.Where(x => x.LoaiCha == null).ToList();
}
@helper renderLSP(tb_LoaiSP lsp)
{
    <li>
        @Html.ActionLink(lsp.TenLoaiSP,"AllByLoai","SanPhamHome",new {id=lsp.MaLoaiSP},null)
        <ul>
            @{
                var listLoaiCha = lsp.tb_LoaiSP1.ToList();
                foreach (var t in listLoaiCha)
                {
                    @renderLSP(t)
                }
            }
        </ul>
    </li>
}
