                    }
                },
                navText: ['<i class="fa fa-angle-left" aria-hidden="true"></i>', '<i class="fa fa-angle-right" aria-hidden="true"></i>']

            });


            var targetElementID = 'nav';
            var classToAppend = 'locked';
            checktarget();
            var bodyRect = document.body.getBoundingClientRect(),
                elemRect = document.getElementById(targetElementID).getBoundingClientRect(),
                offset = elemRect.top - bodyRect.top;

            window.onscroll = function () { checkScroll() };
            window.onresize = function (event) {
                checktarget();
                bodyRect = document.body.getBoundingClientRect(),
                elemRect = document.getElementById(targetElementID).getBoundingClientRect(),
                offset = elemRect.top - bodyRect.top;
            }
            function checktarget() {
                if ($(window).width() <= 768) {
                    targetElementID = "tooget";
                    $('#nav[class="activehover"').toggleClass("activehover")
                            .next();
                }
            }
            function checkScroll() {


                if (elemRect) {
                    if (document.body.scrollTop > offset || document.documentElement.scrollTop > offset) {
                        if (!document.getElementById(targetElementID).className.includes(classToAppend)) {
                            document.getElementById(targetElementID).className = document.getElementById(targetElementID).className + ' ' + classToAppend;
                            $("#text-home").hide();
                            $("#logo-home").show();
                        }
                    } else {
                        document.getElementById(targetElementID).className = document.getElementById(targetElementID).className
                        .replace(' ' + classToAppend, '');
                        $("#text-home").show();
                        $("#logo-home").hide();
                    }
                }
            }
            
                $('.navbar a.dropdown-toggle').on('click', function (e) {
