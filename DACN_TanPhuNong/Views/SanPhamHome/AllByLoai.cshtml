        </div>*@
                <h3 class="title-category" id="title-category" style="text-align:center;">Tất cả</h3>
                <div class="row" id="list-product" style="min-height: 350px">
                   
                </div>
                <ul class="pagination" id="mypagination">
                    
                </ul>
            </div>
        </div>

</div>
<script>
    $(document).ready(function () {

        $('.item-product  .img-name ').hover(function () {
            //    var submenu =  $(this);//.nextUntil('.submenu').parent();
            //    submenu.addClass('activehover');
            $(this).next('div.uu-diem')
             .toggleClass("activeuudiem")
             .next();
        });
        chuyenTrang();
        $("#title-category").html($("#categoryID option:selected").text());
    });
    
    function chuyenTrang(page){
        var id = $("#categoryID").val();
        $("#title-category").html($("#categoryID option:selected").text());
        $.ajax({
            type: 'POST',
            url: "@Url.Action("getListProductsByCategory")",
            data: {
            id: id,
            page: page
            },
        dataType: 'JSON',
        beforeSend: function () {
            $("#list-product").html("");
            $("#list-product").addClass("loading");
            // setting a timeout
                    
        },
        success: function (data) {
           
            $("#mypagination").html(data[0]["pagination"]);
            


            $("#list-product").removeClass("loading");
            $("#list-product").html(data[1]["listproduct"]);
        },
        error: function (xhr) { // if error occured
                    
        }
        });

    }
</script>