@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .ul-product {
        list-style: none;
        margin-top: 1.75rem;
    }
    .ul-product li{
        padding:20px;
       
    }
    .ul-product li.active{
        color:#fff;
        background-color:yellow;
    }
    .content-prpduct{
        min-height:100%;
        margin: 0 auto;
        background:#ffffff;
    }
    #list-product {
        margin-bottom: 1.75rem;
      
    }
    .item-product {
        position: relative;
        height:300px;
        text-align:center;
    }

    .image {
        height:100%;
        width:auto;
        max-width:100%
    }

    .overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background-color: #989898f5;
        overflow: hidden;
        width: 0;
        height: 100%;
        transition: .5s ease;
    }

    .item-product:hover .overlay {
        width: 100%;
    }

    .text-uudiem {
        white-space: nowrap;
        color: white;
        font-size: 20px;
        position: absolute;
        overflow: hidden;
        top: 50%;
        left: 50%;
        width:100%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
    }
    .text-uudiem p {
        width: 100%;
        word-break: break-all;
        /* width: 200px; */
        padding: 10px;
        white-space: normal;
        text-align:left;
    }
    #list-product.loading {
        background-image: url("https://i.imgur.com/T3Ht7S3.gif");
        background-position: center;
        background-repeat: no-repeat;
    }
</style>


<div class="row">
    <div class="container">
        <div class="row" style="margin:auto; margin-top:10px;">
                <label for="sel1" class="col-md-3">@GlobalRes.Category:</label>
                <div class="col-md-8">
                    <select class="form-control" id="categoryID" onchange="chuyenTrang()">
                        <option value="@ViewBag.LoaiCurrent.MaLoaiSP" @(ViewBag.LoaiCurrent.MaLoaiSP == ViewBag.IDCurrent?"selected":"")>Tất cả</option>
                        @foreach (tb_LoaiSPTrans item in ViewBag.ListLSP)
                        {
                            <option value="@item.MaLoaiSP" @(item.MaLoaiSP == ViewBag.IDCurrent ? "selected" : "")>
                                @item.TenLoaiSPTrans
                            </option>
                        }

                    </select>
                </div>
        </div>
        <div class="row content-product">
